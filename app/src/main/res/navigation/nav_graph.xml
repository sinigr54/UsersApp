<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/usersListFragment">
    <fragment
            android:id="@+id/usersListFragment"
            android:name="com.sinigr.usersapp.modules.main.users_list.view.UsersListFragment"
            android:label="UsersListFragment">

        <action
                android:id="@+id/action_usersListFragment_to_editUserFragment"
                app:destination="@id/editUserFragment"/>
    </fragment>

    <fragment android:id="@+id/editUserFragment"
              android:name="com.sinigr.usersapp.modules.main.edit_users.view.EditUserFragment"
              android:label="EditUserFragment">

        <action android:id="@+id/action_editUserFragment_to_usersListFragment"
                app:destination="@id/usersListFragment"
                app:popUpToInclusive="true" app:popUpTo="@+id/usersListFragment"/>

        <argument android:name="id"
                  app:argType="long"
                  android:defaultValue="-1L"/>
    </fragment>

</navigation>