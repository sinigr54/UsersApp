<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/usersListFragment">
    <fragment
        android:id="@+id/usersListFragment"
        android:name="com.sinigr.usersapp.modules.main.users_list.view.UsersListFragment"
        android:label="UsersListFragment">

        <action
            android:id="@+id/action_usersListFragment_to_editUserFragment"
            app:destination="@id/editUserFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:launchSingleTop="false"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/editUserFragment"
        android:name="com.sinigr.usersapp.modules.main.edit_users.view.EditUserFragment"
        android:label="EditUserFragment">

        <argument
            android:name="id"
            android:defaultValue="-1L"
            app:argType="long" />
    </fragment>

</navigation>